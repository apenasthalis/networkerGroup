generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model intention {
  id                   Int       @id @default(autoincrement())
  public_id            String    @unique @default(uuid())
  name                 String?
  business_name        String
  email                String
  status               status_intention @default(pendente)
  reason_participation String
  is_confirmed         Boolean   @default(false)
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt

  members member[]
}

model member {
  id            Int       @id @default(autoincrement())
  public_id     String    @unique @default(uuid())
  name          String?
  email         String
  business_name String
  intention_id  Int
  is_active     Boolean   @default(false)
  phone         String?
  token         String    @unique
  address       String?
  city          String?
  state         String?
  zip_code      String?
  linkedin      String?
  position      String?
  birth_date    DateTime?
  cpf           String?
  education     String?
  experience    String?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  intention   intention @relation(fields: [intention_id], references: [id])
  indications_origin      Indication[] @relation("IndicationsOrigin")
  indications_destination Indication[] @relation("IndicationsDestination")
}

enum status_intention {
  aceita
  pendente
  recusada
}


enum status_indication {
  nova
  em_andamento
  fechada
}

model Indication {
  id                Int       @id @default(autoincrement())
  public_id         String    @unique @default(uuid())
  origin_member_id  Int
  target_member_id Int
  description       String
  status            status_indication @default(nova)
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  origin_member     member    @relation("IndicationsOrigin", fields: [origin_member_id], references: [id])
  target_member     member    @relation("IndicationsDestination", fields: [target_member_id], references: [id])
}
